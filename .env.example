# LLM Provider: ollama, gemini, openai, anthropic
LLM_PROVIDER=ollama
LLM_MODEL=qwen2.5:7b

# Ollama (only needed if LLM_PROVIDER=ollama)
# Points to host machine â€” works on Linux, Mac, and Windows Docker
OLLAMA_BASE_URL=http://host.docker.internal:11434

# Google Gemini (only needed if LLM_PROVIDER=gemini)
GEMINI_API_KEY=your-gemini-api-key

# OpenAI (only needed if LLM_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key

# Anthropic (only needed if LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=your-anthropic-api-key

APP_PORT=5050
